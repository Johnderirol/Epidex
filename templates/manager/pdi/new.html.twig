{% extends 'manager/base.html.twig' %}

{% block title %}New PDI{% endblock %}

{% block body %}
<div class="container">
    <div class="jumbotron">
    <h2>Plan de Développement Individuel</h2>
    <br>
    {{ include('/admin/pdi/_form.html.twig') }}
    

    <a href="{{ path('admin_pdi') }}">back to list</a>
    </div>
</div>

{% endblock %} 

{% block _collab_pdi_widget %}
    <p><strong>Ajouter des actions</stong></p>
    
    {{ form_widget(form)}}
    
    <input type="hidden" id="widgets-counter" value="0">
     
    <div class="form-group">
        <button type="button" id="add-action" class="btn btn-primary">Ajouter une Compétence</button>
    </div>
    
{%  endblock %}
 

{% block _collab_pdi_entry_row %}
     {{ form_widget(form)}}
{% endblock %}  


    
{% block _collab_pdi_entry_widget %}
    <div class="form-group" id="block_{{id}}">
        <div class="row">
            <div class="col-xs-10">
                <div class="row">
                    <div class="col-xs-3">
                        {{ form_widget(form.situationApprenante)}}
                    </div>
                    <div class="col-xs-3">
                        {{ form_widget(form.progres)}}
                    </div>
                    <div class="col-xs-3">
                        {{ form_widget(form.contributeursRoles)}}
                    </div>
                    <div class="col-xs-3">
                        {{ form_widget(form.endDate)}}
                    </div>
                    
                        
                    
                </div>
            </div>
            <div class="col-xs-2">
                <button type="button" data-action="delete" data-target="#block_{{id}}"  class="btn btn-danger">X</button>
            </div>
        </div>
    </div>
{%  endblock %}
     
{% block javascripts %}
    
<script>
 $('#add-actions').click(function(){
     //Je récupère le numéro des futurs champs à créer
     const index = +$('#widgets-counter').val();

     console.log(index);
     
     //Je récupère le prototype des entrées
     const tmpl = $('#collab_pdi').data('prototype').replace(/__name__/g, index);
     
     //J'injecte le code dans la DIV
     $('#collab_pdi').append(tmpl);
     $('#widgets-counter').val(index + 1);
     
     //Je gère le bouton "supprimer"
     handleDeleteButtons();
     
     
 });

    function handleDeleteButtons(){
    $('button[data-action="delete"]').click(function(){
            const target = this.dataset.target;
            $(target).remove();  
    });
    
    }
    function updateCounter(){
        const count = +$('#collab_pdi div.form-group').length;
        
        $('#widgets-counter').val(count);
    }
    
     //On appel la fonction Update
     updateCounter();
    
     //On appel la fonction "supprimer"    
     handleDeleteButtons();
    
</script>

    
{%  endblock %}