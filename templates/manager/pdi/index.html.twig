{% extends 'manager/base.html.twig' %}

{% block title %}PDI index{% endblock %}

{% block body %}
<div class="container">
    <h1>Plan de Développement Individuel</h1>
    <br>
    <h5><a href="{{path('manager_collab')}}">Nouvelle Evaluation</a></h5>
    <br>
    <table class="table">
        <thead>
            <tr class="active">
                <th>Collaborateur</th>
                <th>CreatedAt</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for p in pdis %}
        {% for pdi in p %}
            <tr>
                <td><a href="{{ path('user_show',{'id':pdi.collaborateur.id})}}">{{ pdi.collaborateur.fullName }}</a></td>
                <td>{{ pdi.createdAt ? pdi.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ pdi.endDate ? pdi.endDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('manager_pdi_show', {'id': pdi.id}) }}" class="btn btn-success btn-xs" title="Voir"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('manager_pdi_edit', {'id': pdi.id}) }}" class="btn btn-primary btn-xs" title="Modifier"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('manager_pdi_delete', {'id': pdi.id}) }}" class="btn btn-danger btn-xs" title="Supprimer"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Pas de PDI trouvé</td>
            </tr>
        {% endfor %}
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
