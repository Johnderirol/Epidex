{% block javascripts %}
<script>

var ctx = document.getElementById('fondamentale').getContext('2d');

var data = {
        labels:
        [
        {% for evaluation in radarFond %}
            "{{evaluation.competence.title}}",
        {% endfor %}
        ],

        datasets:[{
            label:"Fondamentale",
            data:
            [
            {% for evaluation in radarFond %}
            "{{evaluation.avgNotes}}",
            {% endfor %}
            ],
            fill:true,
            backgroundColor:"rgba(255, 99, 132, 0.2)",
            borderColor:"rgb(255, 99, 132)",
            pointBackgroundColor:"rgb(255, 99, 132)",
            pointBorderColor:"#fff",
            pointHoverBackgroundColor:"#fff",
            pointHoverBorderColor:"rgb(255, 99, 132)",
            
        }]};

var options = {
    scale: {
    angleLines: {
        display: true
    },
    ticks: {
        suggestedMin: 0,
        suggestedMax: 4
    }
}
};

var config =  {
            type:'radar',
            data: data, 
            options : options
        }
        var graph = new Chart (ctx, config)


</script>
