{% extends 'base.html.twig' %}

{% block title %}Etoile du Développement{% endblock %}

{% block body %}
<div class="container">
    <h1>Etoile du Développement</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comp_etoile in comp_etoiles %}
            <tr>
                <td>{{ comp_etoile.title }}</td>
                <td>{{ comp_etoile.description }}</td>
                <td>
                    <a href="{{ path('compEtoile_show', {'id': comp_etoile.id}) }}" class="btn btn-success btn-xs" title="Voir"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('compEtoile_edit', {'id': comp_etoile.id}) }}" class="btn btn-primary btn-xs" title="Modifier"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('compEtoile_delete', {'id': comp_etoile.id}) }}" class="btn btn-danger btn-xs" title="Supprimer"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('compEtoile_new') }}">Nouvelle Compétences</a>
</div>
{% endblock %}
