{% extends 'admin/base.html.twig' %}

{% block title %}Hello EffectifController!{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-5"> Missions </h1>
    <a href="{{ path('mission_new') }}">Nouvelle Mission</a>
    <br>
    <table class="table">
        <thead>
            <tr class="active">
                <th>Title</th>
                <th>Filière</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mission in missions %}
            <tr>
                <td>{{ mission.title}}</td>
                <td>{{ mission.filiere}}</td>
                <td>
                    <a href="{{ path('mission_show', {'id': mission.id}) }}" class="btn btn-success btn-xs" title="Voir"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('mission_edit', {'id': mission.id}) }}" class="btn btn-primary btn-xs" title="Modifier"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('mission_delete', {'id': mission.id})}}" class="btn btn-danger btn-xs" title="Supprimer"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Aucune mission trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
  
</div>
{% endblock %}

