{% extends 'admin/base.html.twig' %}

{% block title %}Skill index{% endblock %}

{% block body %}

<div class="container">
    <br>
    <h1>Référentiel des compétences</h1>
    <br>
    <table class="table table-striped table-hover" id="table_id">
        <thead>
            <tr class="active">
                <th>Title</th>
                <th>Description</th>
                <th>Categorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for skill in skills %}
            <tr>
                <td width="30%">{{ skill.title }}</td>
                <td width="40%">{{ skill.description }}</td>
                <td width="20%">{{ skill.category.title }}</td>
                <td width="10%">
                    <a href="{{ path('skill_show',{'id': skill.id})}}"class="btn btn-success btn-xs" title="Voir"><i class="fas fa-eye"></i></a>
                    <a href="{{ path('skill_edit',{'id': skill.id})}}" class="btn btn-primary btn-xs" title="Modifier"><i class="fas fa-edit"></i></a>
                    <a href="{{ path('skill_delete',{'id': skill.id})}}" class="btn btn-danger btn-xs" title="Supprimer"><i class="fas fa-trash"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('skill_new') }}" class="btn btn-primary mr-2 mb-2">Nouveau</a>

</div>
{% endblock %}

{% block javascripts %}
<script>
$(document).ready( function () {
    $('#table_id').DataTable();
} );
</script>
{%  endblock %}